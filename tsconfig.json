{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
	},
	"exclude": [
		"node_modules",
		"**/tests/**/*",
		"src/tests/**/*",
	],
	"include": [
		"src",
	],
}